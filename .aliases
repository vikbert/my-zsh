# system wide
# -------------------------------------------------------------------------------------------------
alias ..="cd ..; ls"
alias ...="cd ../..; ls"
alias version='echo nodejs;   node -v;   echo npm;   npm -v;   php -v;   docker -v;   zsh --version'
